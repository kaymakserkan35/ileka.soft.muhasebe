@using ui.Models.Routes;
@model UserEditingModel


@{
    ViewData["Title"] = "Kullanıcı Oluştur";
}



    <h2>@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(ViewData["Errors"] as string))
    {
        <div class="validation-summary-errors">
            @Html.Raw(ViewData["Errors"].ToString().Replace("\n", "<br/>"))
        </div>
    }


    <form asp-controller=@Routes.DevCont asp-action=@Routes.addUser method="post">
        <div class="form-group">
            <label asp-for=@Model.Name>Ad:</label>
            <input type="text" class="form-control" asp-for=@Model.Name>
        </div>
        <div class="form-group">
            <label for=@Model.SurName>Soyad:</label>
            <input type="text" class="form-control" asp-for=@Model.SurName>
        </div>
        <div class="form-group">
            <label for=@Model.Email>Email:</label>
            <input type="text" class="form-control" asp-for=@Model.Email>
        </div>

        <div class="form-group">
            <label for=@Model.PhoneNumber>Phone Number:</label>
            <input type="text" class="form-control" asp-for=@Model.PhoneNumber>
        </div>


        <div class="form-check">
            <label class="form-check-label" for=@Model.EmailConfirmed>Is Email Confirmed</label>
            <input class="form-check-input" type="checkbox" asp-for="@Model.EmailConfirmed">
        </div>

        <div class="form-group">
            <label>Firmalar:</label>

            <select multiple class="form-select  bg-transparent" asp-for="@Model.SelectedFirms">
                @foreach (var item in Model.Firms)
                {
                    <option type="checkbox" checked="checked" id="@item.Id" value="@item.Id" name=@item.Id />
                    @item.Name
                }

            </select>
        </div>


        @if (Model.Roles != null)
        {
            <div class="form-group">
                <label>Roller:</label>

                <select multiple class="form-select  bg-transparent" asp-for="@Model.SelectedRoles">
                    @foreach (var item in Model.Roles)
                    {
                        <option type="checkbox" checked="checked" id="@item.Id" value="@item.Id" name=@item.Id />
                        @item.Name
                    }

                </select>
            </div>
        }

        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>



