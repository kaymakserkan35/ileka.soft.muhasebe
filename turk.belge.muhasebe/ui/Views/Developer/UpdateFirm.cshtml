@model FirmEditingModel
@{
    ViewData["Title"] = "Kullanıcı Güncelle";
}


<h2>Kullanıcı Güncelle</h2>

<form asp-controller=@Routes.DevCont asp-action=@Routes.updateFirm>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for=@Model.Name>Adı:</label>
        <input asp-for=@Model.Name class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for=@Model.EMail> E-posta:</label>
        <input asp-for=@Model.EMail class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for=@Model.PhoneNumber>Telefon Numarası:</label>
        <input asp-for=@Model.PhoneNumber class="form-control" />
    </div>

    <div class="form-group">
        <label>Firmalar:</label>

        <select multiple class="form-select  bg-transparent" id=@Model.SelectedModules asp-for=@Model.SelectedModules>

            @foreach (var x in Model.Modulles)
            {
                <option type="checkbox" selected="@((x.IsSelected ? "selected" : null))" name="@x.Id" id="@x.Id" value="@x.Id" />

                @x.Name
            }
        </select>

    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
